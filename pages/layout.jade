include icon
include navbar

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    link(rel='stylesheet' href='//fonts.googleapis.com/css?family=Roboto+Slab:400,300')
    link(rel='stylesheet' href='#{meta.relativePathToRoot}/bundle.css')
    title=content.pageTitle
  body(class='page-#{meta.name}')
    .container
      +icon('logo')
      +navbar(meta.name)
      block main
    script(src='#{meta.relativePathToRoot}/bundle.js')
